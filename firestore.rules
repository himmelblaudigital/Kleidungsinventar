rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ===================================================================
    // SICHERE REGELN MIT AUTHENTIFIZIERUNG
    // Nur angemeldete Benutzer haben Zugriff auf die Daten
    // ===================================================================

    // Persons Collection - Nur für authentifizierte Benutzer
    match /persons/{personId} {
      allow read, write: if request.auth != null;
    }

    // Clothing Collection - Nur für authentifizierte Benutzer
    match /clothing/{clothingId} {
      allow read, write: if request.auth != null;
    }
  }
}
