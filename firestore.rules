rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // WICHTIG: Diese Regeln erlauben ÖFFENTLICHEN Zugriff!
    // Nur für Entwicklung/Test verwenden!
    // Für Produktion sollten Sie Authentifizierung hinzufügen

    // Persons Collection - Öffentlicher Zugriff
    match /persons/{personId} {
      allow read, write: if true;
    }

    // Clothing Collection - Öffentlicher Zugriff
    match /clothing/{clothingId} {
      allow read, write: if true;
    }
  }
}

